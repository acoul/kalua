#!/bin/sh

_random_username_themes()
{
	echo 'shoebrands animals_de capital_citys_de artists_leipzig_de componists uniform_name'
}

_random_username_themeinfo()
{
	local THEME="$1"
	local lang="$2"
	local i

	case "$THEME" in
		        animals_de) o="$( _i18n get "$lang" animalnames_german )"; i=74 ;;
		  capital_citys_de) o="$( _i18n get "$lang" capital_citys )"; i=145 ;;
		artists_leipzig_de) o="$( _i18n get "$lang" artists_school_of_leipzig )"; i=85 ;;
		        shoebrands) o="$( _i18n get "$lang" shoe_brands )"; i=188 ;;
			componists) o="$( _i18n get "$lang" classical_composers )"; i=159 ;;
				 *) o="$( _i18n get "$lang" uniq_username )" ;;
	esac

	[ -n "$i" ] && {
		o="$o ($( _i18n get "$lang" overall ):$i)"
	}

	echo "$o"
}


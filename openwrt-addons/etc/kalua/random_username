				125) o="scarlatti";;
				126) o="schaeffer";;
				127) o="sceisi";;
				128) o="schnittke";;
				129) o="schubert";;
				130) o="schumann";;
				131) o="sibelius";;
				132) o="smetana";;
				133) o="spohr";;
				134) o="steinbauer";;
				135) o="stockhausen";;
				136) o="strauss";;
				137) o="strawinsky";;
				138) o="sulzer";;
				139) o="tartini";;
				140) o="telemann";;
				141) o="theodorakis";;
				142) o="tschaikowsky";;
				143) o="ullmann";;
				144) o="vaughan";;
				145) o="verdi";;
				146) o="villalobos";;
				147) o="vivaldi";;
				148) o="wagenseil";;
				149) o="wagner";;
				150) o="webber";;
				151) o="weber";;
				152) o="wolf";;
				153) o="wolkenstein";;
				154) o="xenakis";;
				155) o="yun";;
				156) o="zandonai";;
				157) o="zelenka";;
				158) o="zeller";;
				*) o="zemlinsky";;
			esac
		;;
		*)
			if [ -z "$THEME" ]; then

				_log do $FUNC daemon info "empty themename, correcting"

				for THEME in $( _random_username themes ); do {
					break
				} done

				_log do uci_commit daemon alert 'system: changed weblogin-namespace'
				uci set system.@weblogin[0].namespace="$THEME"
				uci commit system

				_random_username get $THEME
				return
			else
				o="$THEME"
			fi
		;;
	esac

	if [ ${#o} -lt 11 ]; then
		echo $o
	else
		_sanitizer run "$o" length:10		# fixme! use smaller fonts on pdf()
	fi
}

				108) o="prokofjew";;
				109) o="puccini";;
				110) o="purcell";;
				111) o="quantz";;
				112) o="rachmaninow";;
				113) o="rameau";;
				114) o="ramsauer";;
				115) o="ravel";;
				116) o="reger";;

From 8105980f83f5f98fc51798249527bb5c2678939b Mon Sep 17 00:00:00 2001
From: Bastian Bittorf <bittorf@bluebottle.com>
Date: Wed, 6 Jan 2016 12:04:47 +0100
Subject: [PATCH] busybox: switch to proto git and use version from 2016-jan-03
 which is more or less v1.24.2pre

Signed-off-by: Bastian Bittorf <bittorf@bluebottle.com>
---
 package/utils/busybox/Makefile | 9 +++++----
 1 file changed, 5 insertions(+), 4 deletions(-)

diff --git a/package/utils/busybox/Makefile b/package/utils/busybox/Makefile
index 5ca4363..57491a7 100644
--- a/package/utils/busybox/Makefile
+++ b/package/utils/busybox/Makefile
@@ -8,14 +8,15 @@
 include $(TOPDIR)/rules.mk
 
 PKG_NAME:=busybox
-PKG_VERSION:=1.24.1
+PKG_VERSION:=2016-jan-03
 PKG_RELEASE:=1
 PKG_FLAGS:=essential
 
+PKG_SOURCE_PROTO:=git
+PKG_SOURCE_URL:=git://git.busybox.net/busybox
 PKG_SOURCE:=$(PKG_NAME)-$(PKG_VERSION).tar.bz2
-PKG_SOURCE_URL:=http://www.busybox.net/downloads \
-		http://distfiles.gentoo.org/distfiles/
-PKG_MD5SUM:=be98a40cadf84ce2d6b05fa41a275c6a
+PKG_SOURCE_VERSION:=bae8f98
+PKG_SOURCE_SUBDIR:=$(PKG_NAME)
 
 PKG_BUILD_DEPENDS:=BUSYBOX_USE_LIBRPC:librpc BUSYBOX_CONFIG_PAM:libpam
 PKG_BUILD_PARALLEL:=1
